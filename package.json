{
  "name": "postcss-simple-vars",
  "version": "6.0.3",
  "description": "PostCSS plugin for Sass-like variables",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "sass",
    "variables",
    "vars"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-simple-vars",
  "scripts": {
    "test": "jest --coverage && eslint . && check-dts"
  },
  "engines": {
    "node": ">=10.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.2.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^44.1.0",
    "check-dts": "^0.4.4",
    "clean-publish": "^1.1.8",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.4",
    "postcss-each": "^1.0.0",
    "postcss-for": "^2.1.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-mixins": "^7.0.3",
    "postcss-sharec-config": "^0.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "unicorn/better-regex": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.2.2"
  }
}
