{
  "name": "postcss-simple-vars",
  "version": "7.0.1",
  "description": "PostCSS plugin for Sass-like variables",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "sass",
    "variables",
    "vars"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-simple-vars",
  "scripts": {
    "unit": "uvu . '\\.test\\.js$'",
    "test": "c8 pnpm unit && eslint ."
  },
  "engines": {
    "node": ">=14.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.2.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^48.0.0",
    "c8": "^7.12.0",
    "clean-publish": "^4.0.1",
    "eslint": "^8.27.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "postcss": "^8.4.18",
    "postcss-each": "^1.1.0",
    "postcss-for": "^2.1.1",
    "postcss-mixins": "^9.0.4",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "reporter": "lcov",
    "check-coverage": true
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
